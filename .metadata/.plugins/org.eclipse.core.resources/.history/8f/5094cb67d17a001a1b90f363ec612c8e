		airLineId.put("양양", "NAARKNY");
		airLineId.put("제주", "NAARKPC");
		airLineId.put("김해", "NAARKPK");
		airLineId.put("사천", "NAARKPS");
		airLineId.put("울산", "NAARKPU");
		airLineId.put("인천", "NAARKSI");
		airLineId.put("김포", "NAARKSS");
		airLineId.put("포항", "NAARKTH");
		airLineId.put("대구", "NAARKTN");
